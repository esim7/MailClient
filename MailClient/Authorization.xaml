<Page x:Class="MailClient.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MailClient"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="450"
      Title="Authorization">

    <Grid>
        <Label Content="Введите почтовый адресс" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top" Width="170"/>
        <Label Content="Введите пароль" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,175,0,0" VerticalAlignment="Top" Width="170"/>
        <TextBox Name="email_textBox" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="26"/>
        <PasswordBox Name="password_passwordBox" HorizontalAlignment="Center" Margin="0,206,0,0" VerticalAlignment="Top" Width="170" Height="26"/>
        <Button Name="Go_Button" Content="Войти" HorizontalAlignment="Center" Margin="0,283,0,0" VerticalAlignment="Top" Width="104" Click="GoButton"/>


    </Grid>
</Page>
